<Page x:Class="ProjectManager.Pages.Reg"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:ProjectManager.Pages"
      mc:Ignorable="d" 
      d:DesignHeight="270" d:DesignWidth="300"
      Title="Reg">

	<StackPanel Name="Content" Width="300" Height="270">
		<Label Content="Регистрация" Foreground="White" FontSize="30" HorizontalAlignment="Center"/>
		<StackPanel>
			<Label Content="Логин:" Margin="50,0,0,0" Foreground="White"/>
			<StackPanel Orientation="Horizontal" HorizontalAlignment="Center">
				<Path Width="20" Height="20" Stretch="Uniform" Fill="White"
                              VerticalAlignment="Center"
                              Data="M224 256c70.7 0 128-57.3 128-128S294.7 0 224 0 96 57.3 96 128s57.3 128 128 128zm89.6 32h-16.7c-22.2 10.2-46.9
                              16-72.9 16s-50.6-5.8-72.9-16h-16.7C60.2 288 0 348.2 0 422.4V464c0 26.5 21.5 48 48 48h352c26.5 0 48-21.5
                              48-48v-41.6c0-74.2-60.2-134.4-134.4-134.4z"/>
				<TextBox Name="Login" Width="230" Height="25" Margin="5,0,0,0" Style="{StaticResource TB}"/>
			</StackPanel>
		</StackPanel>
		<StackPanel Margin="0,10,0,0">
			<Label Content="Пароль:" Margin="50,0,0,0" Foreground="White"/>
			<StackPanel Orientation="Horizontal" HorizontalAlignment="Center">
				<Path Width="20" Height="20" Stretch="Uniform" Fill="White"
                              VerticalAlignment="Center"
                              Data="M400 224h-24v-72C376 68.2 307.8 0 224 0S72 68.2 72 152v72H48c-27.5 0-48 21.5-48 48v192c0 26.5 21.5 48 48
															48h352c26.5 0 48-21.5 48-48V272c0-26.5-21.5-48-48-48zm-104 0H152v-72c0-39.7 32.3-72 72-72s72 32.3 72 72v72z"/>
				<PasswordBox Name="Password" Width="230" Height="25" Margin="5,0,0,0" Style="{StaticResource PB2}"/>
			</StackPanel>
		</StackPanel>
		<StackPanel Margin="0,10,0,0">
			<Label Content="Повторите пароль:" Margin="50,0,0,0" Foreground="White"/>
			<StackPanel Orientation="Horizontal" HorizontalAlignment="Center">
				<Path Width="20" Height="20" Stretch="Uniform" Fill="White"
                              VerticalAlignment="Center"
                              Data="M400 224h-24v-72C376 68.2 307.8 0 224 0S72 68.2 72 152v72H48c-27.5 0-48 21.5-48 48v192c0 26.5 21.5 48 48
															48h352c26.5 0 48-21.5 48-48V272c0-26.5-21.5-48-48-48zm-104 0H152v-72c0-39.7 32.3-72 72-72s72 32.3 72 72v72z"/>
				<PasswordBox Name="Confrim_Password" Width="230" Height="25" Margin="5,0,0,0" Style="{StaticResource PB2}"/>
			</StackPanel>
		</StackPanel>
		<Button Background="Transparent" BorderThickness="0" Margin="0,20,0,0" Click="Regin_Click">
			<Border Background="#27282B" CornerRadius="3" Width="250" Height="25">
				<TextBlock Text="Войти" HorizontalAlignment="Center" VerticalAlignment="Center"/>
			</Border>
		</Button>
	</StackPanel>
</Page>
